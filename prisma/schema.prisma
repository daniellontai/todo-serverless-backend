model Task {
  id        BigInt    	@id @default(autoincrement())
  description String
  complete  Boolean		@default(false)
  listId    String		@default("0")
  list      List      	@relation(fields: [listId], references: [id])

  @@map("task")
}

model List {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(dbgenerated())
  tasks     Task[]

  @@map("list")
}

model RateLimiter {
	key     String   @id
	points  Int
	expire  DateTime?
}